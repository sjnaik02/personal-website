---
import type { TimelineItem } from "../types/timeline";
import ProjectCard from "./ProjectCard.astro";

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<div class="flex flex-col gap-8 max-w-xl relative">
  <div
    class="absolute top-[12px] h-[calc(100%-12px)] -mb-[48px] left-[7px] border-l border-black"
  >
  </div>
  {
    items.map((item) => (
      <div class="flex gap-4">
        <div class="w-4 h-4 rounded-sm bg-neutral-900 flex-shrink-0 z-10" />
        <div class="flex-1">
          <div class="text-sm text-neutral-500 mb-2">{item.date}</div>
          <ProjectCard {...item} />
        </div>
      </div>
    ))
  }
</div>
