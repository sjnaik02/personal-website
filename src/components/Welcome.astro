---
import Timeline from "./Timeline.astro";
import type { TimelineItem } from "../types/timeline";
export const timelineData: TimelineItem[] = [
  {
    date: "July 2024 - Present",
    name: "Growth & Tech @ Tangle News",
    type: "work",
    description:
      "As a Growth and Tech Intern, I built a custom survey platform that reduced SaaS costs by 90% while serving 250K+ users. Stack: Next.js, TypeScript, PostgreSQL",
    link: "/experience/tangle-news",
    role: "Growth & Product Intern",
    company: "Tangle News",
  },
  {
    date: "April 2024 - Present",
    name: "BITS Pilani Placement Unit",
    type: "college org",
    description:
      "Selected as 1 of 7 from 800+ students to lead placement operations across 3 campuses",
    link: "/experience/bits-placement",
    role: "Placement Coordinator",
    company: "BITS Pilani - Goa Campus",
  },
  {
    date: "June 2023 - July 2024",
    name: "TEDxBITSGoa",
    type: "college org",
    description:
      "Led India's oldest institutional TEDx conference, orchestrating its largest-ever merchandise initiative",
    link: "/experience/tedx",
    role: "Chief Coordinator",
    company: "BITS Pilani - Goa Campus",
  },
];
---

<main class="bg-grid w-full px-4 overflow-y-scroll bg-fixed pb-24">
  <div
    class="flex flex-col container max-w-xl h-screen mx-auto gap-4 font-sans"
  >
    <h1 class="text-4xl mt-8 font-serif">Hi, I'm Shourya Naik</h1>
    <p class="text-xl leading-relaxed text-neutral-600">
      I'm a <span class="text-neutral-900 font-medium">product manager</span> and
      a <span class="text-neutral-900 font-medium">programmer</span>. I'm
      currently working with <span class="text-neutral-900 font-medium"
        >Tangle News</span
      > on tech and growth. I'm in my final year of college at <span
        class="text-neutral-900 font-medium">BITS Goa</span
      >.
    </p>
    <section class="flex flex-col gap-4 mt-8">
      <h2 class="text-3xl font-serif">My Work and Experience</h2>
      <Timeline items={timelineData} />
    </section>
  </div>
</main>
